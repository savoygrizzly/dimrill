[
	{
		"Version": "1.0",
		"Statement": [
			{
				"Effect": "Allow",
				"Action": ["blackeye:files:orders:convertOrder"],
				"Condition": {
					"InArray": {
						"{{$customerId}}": "{{$organizations}}",
						"{{$orderState}}": ["draft"]
					},
					"StringEquals": {
						"{{$toOrderState}}": "salesOrder"
					}
				}
			},
			{
				"Effect": "Allow",
				"Action": ["blackeye:files:orders:getCreateOrderFields"],
				"Condition": {
					"InArray": {
						"{{$pricelist}}": "{{!allowedPricelists}}",
						"{{$currencyCode}}": "{{!allowedOrderCurrencies}}",
						"{{$sellerId}}": "{{!sellerIds}}",
						"{{$customerId}}": "{{$organizations}}"
					}
				}
			}
		]
	}
]
