{
	"name": "dimrill",
	"version": "5.1.8",
	"description": "Dimrill V5",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"require": "./dist/cjs/index.js",
			"import": "./dist/esm/index.js",
			"default": "./dist/esm/index.js"
		},
		"./types": {
			"types": "./dist/types/types/index.d.ts"
		}
	},
	"files": [
		"dist/"
	],
	"scripts": {
		"dev": "tsc --build && node ./examples/index.js && tsc --build --clean",
		"compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
		"build:clean": "rm -rf ./dist",
		"build": "npm-run-all build:clean compile prepare-package",
		"prepare-package": "node ./scripts/prepare-package-json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"clean": "tsc --build --clean",
		"lint": "eslint src tests --ext .ts"
	},
	"license": "MIT",
	"keywords": [
		"authorization",
		"authorizer",
		"jwt",
		"mongoose",
		"fastify",
		"express"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sosickstudio/dimrill.git"
	},
	"author": "Mateo Laporte",
	"devDependencies": {
		"@jest/test-sequencer": "^30.2.0",
		"@types/jest": "^30.0.0",
		"@types/lodash": "^4.17.23",
		"@types/node": "^25.0.9",
		"@typescript-eslint/eslint-plugin": "^8.53.1",
		"@typescript-eslint/parser": "^8.53.1",
		"eslint": "^9.39.2",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-n": "^17.23.2",
		"eslint-plugin-promise": "^7.2.1",
		"jest": "^30.2.0",
		"npm-run-all": "^4.1.5",
		"ts-jest": "^29.4.6",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"bson": "^7.1.1",
		"lodash": "^4.17.21"
	}
}
